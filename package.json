{
  "name": "mcipro-golf-platform",
  "version": "1.0.0",
  "description": "Professional Golf Course Management Platform",
  "main": "index.html",
  "scripts": {
    "build:css": "tailwindcss -i src/styles/tailwind.css -o public/assets/tailwind.css --minify",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "vercel-build": "echo 'Static site - no build needed'",
    "build:native": "node build-native.js",
    "deploy": "netlify deploy --prod",
    "cap:sync": "npx cap sync",
    "cap:android": "npm run build:native && npx cap open android",
    "cap:ios": "npm run build:native && npx cap open ios",
    "cap:run:android": "npm run build:native && npx cap run android",
    "cap:run:ios": "npm run build:native && npx cap run ios"
  },
  "keywords": [
    "golf",
    "management",
    "platform",
    "caddie",
    "proshop"
  ],
  "author": "MciPro Team",
  "license": "MIT",
  "dependencies": {
    "@capacitor/android": "^7.4.3",
    "@capacitor/app": "^7.1.0",
    "@capacitor/filesystem": "^7.1.4",
    "@capacitor/haptics": "^7.0.2",
    "@capacitor/ios": "^7.4.3",
    "@capacitor/network": "^7.0.2",
    "@capacitor/preferences": "^7.0.2",
    "@capacitor/push-notifications": "^7.0.3",
    "@capacitor/share": "^7.0.2",
    "@capacitor/splash-screen": "^7.0.3",
    "@capacitor/status-bar": "^7.0.3",
    "@netlify/blobs": "^10.0.11",
    "@supabase/supabase-js": "^2.81.1",
    "pusher": "^5.2.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "@tailwindcss/cli": "^4.1.14",
    "@tailwindcss/forms": "^0.5.10",
    "autoprefixer": "^10.4.21",
    "netlify-cli": "^17.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "vite": "^7.2.2"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pgatour29-pro/mcipro-golf-platform.git"
  },
  "bugs": {
    "url": "https://github.com/pgatour29-pro/mcipro-golf-platform/issues"
  },
  "homepage": "https://github.com/pgatour29-pro/mcipro-golf-platform#readme"
}
