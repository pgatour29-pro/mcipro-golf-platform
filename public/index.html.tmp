        // Open full-screen tee sheet with course parameter
        function openFullscreenTeeSheet() {
            let courseId = 'pattana';
            const currentUser = window.currentUser || JSON.parse(localStorage.getItem('currentUser') || '{}');
            if (currentUser.homeClub) {
                const clubMapping = {
                    'Pattana Golf Club & Resort': 'pattana',
                    'Chee Chan Golf Resort': 'cheechan',
                    'Siam Country Club - Old Course': 'siam_cc_old',
                    'Siam Country Club - Plantation': 'siam_cc_plantation',
                    'Laem Chabang International Country Club': 'laem_chabang',
                    'Phoenix Gold Golf & Country Club': 'phoenix',
                    'Khao Kheow Country Club': 'khao_kheow',
                    'Burapha Golf Club': 'burapha'
                };
                courseId = clubMapping[currentUser.homeClub] || courseId;
            }
            window.open('/teesheet-fullscreen.html?course=' + courseId, 'teesheet', 'width=1920,height=1080,menubar=no,toolbar=no,location=no,status=no');
        }
